<?xml version="1.0" encoding="UTF-8" ?>
<beans 
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
                            http://www.springframework.org/schema/beans/spring-beans-2.5.xsd" >
                            
    <bean id="cmn11014" class="ru.acs.fts.eps2.engine.processing.JobBatch" >
        <property name="description" value="Разрешение на отзыв ЭТД" />
        <property name="preparedJobs">
            <list>

				<!-- Проверяем наличие в базе конверта с таким же EnvelopeID, DocumentID -->                
                <bean class="ru.acs.fts.eps2.engine.processing.PreparedJob" >
                	<constructor-arg ref="checkSameEnvelopeExists" />
                	<constructor-arg>
                		<bean class="ru.acs.fts.eps2.engine.processing.JobContext" >
                			<constructor-arg>
                				<map />
                			</constructor-arg>
                		</bean>
                	</constructor-arg>
                </bean>            						                        	

                <!-- Сохраняем входящий конверт -->
                <bean class="ru.acs.fts.eps2.engine.processing.PreparedJob">
                    <constructor-arg ref="saveIncomeEnvelope" />
                    <constructor-arg>
                        <bean class="ru.acs.fts.eps2.engine.processing.JobContext">
                            <constructor-arg>
                                <map>
                                    <entry key="needFlush" value="true" />
                                </map>
                            </constructor-arg>
                        </bean>
                    </constructor-arg>
                </bean>
            
                <!-- Авторизация -->
                <bean class="ru.acs.fts.eps2.engine.processing.PreparedJob" >
                    <constructor-arg ref="authorization" />
                    <constructor-arg >
                        <bean class="ru.acs.fts.eps2.engine.processing.JobContext" >
                            <constructor-arg>
                                <map>
                                    <entry key="authType" value="FROM_KASTO_TO_DECL" />
                                </map>
                            </constructor-arg>
                        </bean>
                    </constructor-arg>
                </bean>         
            
                <!-- CMN.00002 -->
				<bean class="ru.acs.fts.eps2.engine.processing.PreparedJob" >
					<constructor-arg ref="callSubBatch" />
					<constructor-arg>
						<bean class="ru.acs.fts.eps2.engine.processing.JobContext" >
							<constructor-arg>
								<map>
									<entry key="subBatch" value-ref="sendCMN00002" />
								</map>
							</constructor-arg>
						</bean>
					</constructor-arg>
				</bean>
                
				<!-- Проверка валидных InitialEnvelopeID и RefDocumentID в рамках текущей 
					ProccessID -->
				<bean class="ru.acs.fts.eps2.engine.processing.PreparedJob">
					<constructor-arg ref="checkInitialEnvelopeAndRefDocument" />
					<constructor-arg>
						<bean class="ru.acs.fts.eps2.engine.processing.JobContext">
							<constructor-arg>
								<map />
							</constructor-arg>
						</bean>
					</constructor-arg>
				</bean>

				<!-- Проверка подписи -->
				<bean class="ru.acs.fts.eps2.engine.processing.PreparedJob" >
					<constructor-arg ref="checkSignedEnvelope" />
					<constructor-arg>
						<bean class="ru.acs.fts.eps2.engine.processing.JobContext" >
							<constructor-arg>
								<map />
							</constructor-arg>
						</bean>
					</constructor-arg>
				</bean>

                <!-- Делаем структурный контроль -->
                <bean class="ru.acs.fts.eps2.engine.processing.PreparedJob">
                    <constructor-arg ref="structControlRequest" />
                    <constructor-arg>
                        <bean class="ru.acs.fts.eps2.engine.processing.JobContext">
                            <constructor-arg>
                                <map />
                            </constructor-arg>
                        </bean>
                    </constructor-arg>
                </bean>
                
				<!-- Контроль соответствия типа сообщения и передаваемого документа -->
				<!-- Контроль типа передачи сообщения -->
				<!-- Проверка возможности перехода в текущем статусном состоянии процедуры -->
				<bean class="ru.acs.fts.eps2.engine.processing.PreparedJob">
					<constructor-arg ref="checkMessageContent" />
					<constructor-arg>
						<bean class="ru.acs.fts.eps2.engine.processing.JobContext">
							<constructor-arg>
								<map />
							</constructor-arg>
						</bean>
					</constructor-arg>
				</bean>				                

				<!-- Переводим состояние процедуры -->								
				<bean class="ru.acs.fts.eps2.engine.processing.PreparedJob" >
					<constructor-arg ref="changeProcessState" />
					<constructor-arg>
						<bean class="ru.acs.fts.eps2.engine.processing.JobContext" >
							<constructor-arg>
								<map />
							</constructor-arg>
						</bean>
					</constructor-arg>
				</bean>
                
                <!-- Бизнес обработка -->
                <bean class="ru.acs.fts.eps2.engine.processing.PreparedJob">
                    <constructor-arg ref="businessProcessing" />
                    <constructor-arg>
                        <bean class="ru.acs.fts.eps2.engine.processing.JobContext">
                            <constructor-arg>
                                <map>
                                    <entry key="envelopeName" value="transitMessage" />
                                </map>
                            </constructor-arg>
                        </bean>
                    </constructor-arg>
                </bean>
                <bean class="ru.acs.fts.eps2.engine.processing.PreparedJob">
                    <constructor-arg ref="sendMessage" />
                    <constructor-arg>
                        <bean class="ru.acs.fts.eps2.engine.processing.JobContext">
                            <constructor-arg>
                                <map>
                                    <entry key="envelopeName" value="transitMessage" />
                                    <entry key="recvSystem" value="DECLARANT" />
                                </map>
                            </constructor-arg>
                        </bean>
                    </constructor-arg>
                </bean>
                <bean class="ru.acs.fts.eps2.engine.processing.PreparedJob">
                    <constructor-arg ref="saveObjectToDb" />
                    <constructor-arg>
                        <bean class="ru.acs.fts.eps2.engine.processing.JobContext">
                            <constructor-arg>
                                <map>
                                    <entry key="objectToSave" value="transitMessage" />
                                    <entry key="needFlush" value="true" />
                                </map>
                            </constructor-arg>
                        </bean>
                    </constructor-arg>
                </bean>
                
				<!-- Сохраняем переведенное состояние процедуры в базу -->
				<bean class="ru.acs.fts.eps2.engine.processing.PreparedJob">
					<constructor-arg ref="updateProcessInfo" />
					<constructor-arg>
						<bean class="ru.acs.fts.eps2.engine.processing.JobContext">
							<constructor-arg>
								<map>
									<entry key="needFlush" value="true" />
								</map>
							</constructor-arg>
						</bean>
					</constructor-arg>
				</bean>

                <!-- CMN.00004 -->
				<bean class="ru.acs.fts.eps2.engine.processing.PreparedJob" >
					<constructor-arg ref="callSubBatch" />
					<constructor-arg>
						<bean class="ru.acs.fts.eps2.engine.processing.JobContext" >
							<constructor-arg>
								<map>
									<entry key="subBatch" value-ref="sendCMN00004" />
								</map>
							</constructor-arg>
						</bean>
					</constructor-arg>
				</bean>
            </list>
        </property>
    </bean>
</beans>