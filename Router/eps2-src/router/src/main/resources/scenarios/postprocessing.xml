<?xml version="1.0" encoding="UTF-8"?>
<beans 
		xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.springframework.org/schema/beans 
							http://www.springframework.org/schema/beans/spring-beans.xsd" >

	<!-- Пакет для предварительной обработки -->
	<bean id="postProcessingJobBatch" class="ru.acs.fts.eps2.engine.processing.JobBatch" >
		<property name="description" value="Пакет задач для пост-обработки" />
		<property name="preparedJobs" >
			<list>
				<bean class="ru.acs.fts.eps2.engine.processing.PreparedJob" >
					<constructor-arg ref="sendToAud" />
					<constructor-arg>
						<bean class="ru.acs.fts.eps2.engine.processing.JobContext">
							<constructor-arg>
								<map />
							</constructor-arg>
						</bean>
					</constructor-arg>
				</bean>
				<bean class="ru.acs.fts.eps2.engine.processing.PreparedJob" >
					<constructor-arg ref="sendToAly" />
					<constructor-arg>
						<bean class="ru.acs.fts.eps2.engine.processing.JobContext">
							<constructor-arg>
								<map />
							</constructor-arg>
						</bean>
					</constructor-arg>
				</bean>
				<bean class="ru.acs.fts.eps2.engine.processing.PreparedJob" >
					<constructor-arg ref="saveResultInfo" />
					<constructor-arg>
						<bean class="ru.acs.fts.eps2.engine.processing.JobContext">
							<constructor-arg>
								<map />
							</constructor-arg>
						</bean>
					</constructor-arg>
				</bean>		
				<bean class="ru.acs.fts.eps2.engine.processing.PreparedJob">
                    <constructor-arg ref="sendEvents" />
                    <constructor-arg>
                        <bean class="ru.acs.fts.eps2.engine.processing.JobContext">
                            <constructor-arg>
                                <map />
                            </constructor-arg>
                        </bean>
                    </constructor-arg>
                </bean>		
			</list>
		</property>
	</bean>


</beans>
