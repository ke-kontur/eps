	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>ru.acs.monitoring</groupId>
		<artifactId>monitoring-parent</artifactId>
		<version>1.0</version>
		<relativePath>../../parent/pom.xml</relativePath>
	</parent>

	<artifactId>monitoring-center-web</artifactId>
	<version>${applicationVersion}</version>
	<packaging>war</packaging>
	<name>Monitoring Center Web</name>

	<properties>
		<gwt.version>1.7.0</gwt.version>
		<gxt.version>2.0.1-acs</gxt.version>
		<gxt-res.version>2.0.1</gxt-res.version>
		<netbeans.hint.deploy.server>Tomcat60</netbeans.hint.deploy.server>
	</properties>

	<build>
		<finalName>monitoring-center</finalName>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>gwt-maven-plugin</artifactId>
				<version>1.1</version>
				<executions>
                    <execution>
                        <id>1</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generateAsync</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>2</id>
						<phase>compile</phase>
						<goals>
							<goal>compile</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<module>ru.acs.monitoring.app.MonitoringApp</module>
					<runTarget>index.html</runTarget>
					<hostedWebapp>${project.build.directory}/${project.build.finalName}</hostedWebapp>
					<extraJvmArgs>-Xmx768m</extraJvmArgs>
				</configuration>
			</plugin>
		</plugins>
	</build>

